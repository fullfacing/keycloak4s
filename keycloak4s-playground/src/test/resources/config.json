{
  "service" : "api-test",
  "enforcementMode" : "ENFORCING",
  "paths" : [
    {
      "path" : "*",
      "methodRoles": [
        {
          "method" : "*",
          "roles" : "admin"
        }
      ]
    },
    {
      "path" : "/v1/segment",
      "methodRoles": [
        {
          "method" : "GET",
          "roles" : {
            "or" : [ "read", "write", "delete" ]
          }
        },
        {
          "method" : "POST",
          "roles" : {
            "or" : [ "write", "delete" ]
          }
        },
        {
          "method" : "PUT",
          "roles" : {
            "or" : [ "write", "delete" ]
          }
        },
        {
          "method" : "DELETE",
          "roles" : {
            "or" : [ "delete" ]
          }
        }
      ]
    },
    {
      "path" : "/v1/segment/{id}/*",
      "methodRoles" : [
        {
          "method": "*",
          "roles": "wildcard-role"
        }
      ]
    },
    {
      "path" : "/v1/segment/{id}/action",
      "methodRoles" : [
        {
          "method": "POST",
          "roles": "action-role"
        }
      ]
    }
  ]
}